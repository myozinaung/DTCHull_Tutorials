FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// "controlDict" file is not essential at this stage, but blockMesh doesn't run without "controlDict" file
// Probably, blockMesh use time infromation for meshing, different mesh at different time step
// Essential entries are "deltaT" and "writeInterval"

deltaT          1;

writeInterval   100;